
@{
    ViewData["Title"] = "Register";
}

@model RegisterViewModel

<div class="container">
    <form asp-action="RegisterConfirm">
        <div class="form-group">
            <label>شماره تلفن:</label>
            <input class="form-control" asp-for="@Model.phoneNummber" />
            <span asp-validation-for="@Model.phoneNummber"></span>
        </div>
        <div class="form-group">
            <label>رمز عبور:</label>
            <input class="form-control" type="password" asp-for="@Model.password" />
            <span asp-validation-for="@Model.password"></span>
        </div>
        <div class="form-group">
            <label>تکرار رمز عبور:</label>
            <input class="form-control" type="password" asp-for="@Model.rePassword" />
            <span asp-validation-for="@Model.rePassword"></span>
        </div>
        <div>
            <button class="btn btn-outline-success">ثبت نام</button>
        </div>
    </form>
</div>
